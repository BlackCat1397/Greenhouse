@page
@{
  ViewBag.Title = "Status - Greenhouse-systems";
  ViewBag.MenuItem = "Status";
  Layout = "_Layout";

  @section Styles {
    <link rel="stylesheet" href="/css/status/status.css">
  }

  @section Scripts {
    <script type="text/javascript" src="/js/status/status.js"></script>
  }
}

<div class="row">
</div>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped period" id="table-sensors">
      <thead>
        <tr>
          <th scope="col">Sensor Type</th>
          <th scope="col">Target value</th>
          <th scope="col">Sensor ID</th>
          <th scope="col">Current value</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td rowspan="3">Humidity</td>
          <td rowspan="3">22</td>
          <td class="">1</td>
          <td class="alert alert-warning">21</td>
        </tr>
        <tr>
          
          <td class="">2</td>
          <td class="alert alert-success">22</td>
        </tr>
        <tr>
          
          <td class="">3</td>
          <td class="alert alert-danger">25</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <table class="table table-striped period" id="table-devices"=>
      <thead>
        <tr>
          <th scope="col">Device Type</th>
          <th scope="col">Device ID</th>
          <th scope="col">Current state</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td rowspan="3">Humidity</td>
          <td class="">1</td>
          <td class="alert alert-success">On</td>
        </tr>
        <tr>
          
          <td class="">2</td>
          <td class="alert alert-success">On</td>
        </tr>
        <tr>
          
          <td class="">3</td>
          <td class="alert alert-danger">Off</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
